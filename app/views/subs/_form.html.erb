<% url = action == :new ? subs_url : sub_url(sub) %>
<% button_value = action == :new ? "Create Sub" : "Save Edited Sub" %>
<form action = "<%= url  %>" method="POST">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label>Title:
    <input type="text" name="sub[title]" value ="<%= @sub.title  %>">
  </label>
  <br>
  <label>Description:
    <input type="text" name="sub[description]" value ="<%= @sub.description  %>">
  </label>
  <br>
  <button><%= button_value %></button>
</form>
